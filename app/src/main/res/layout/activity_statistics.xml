<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#4A556B"
        android:gravity="center"
        android:padding="10dp"
        android:text="人机简单"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/simple_black_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4A556B"
            android:gravity="center"
            android:text="玩家执黑总局数：0"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/simple_black_player_win"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4A556B"
            android:gravity="center"
            android:text="玩家胜率：0%"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/simple_white_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4A556B"
            android:gravity="center"
            android:text="玩家执白总局数：0"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/simple_white_player_win"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4A556B"
            android:gravity="center"
            android:text="玩家胜率：0%"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#4A556B"
        android:gravity="center"
        android:padding="10dp"
        android:text="人机困难"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hard_black_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4A556B"
            android:gravity="center"
            android:text="玩家执黑总局数：0"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/hard_black_player_win"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4A556B"
            android:gravity="center"
            android:text="玩家胜率：0%"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/hard_white_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4A556B"
            android:gravity="center"
            android:text="玩家执白总局数：0"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/hard_white_player_win"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4A556B"
            android:gravity="center"
            android:text="玩家胜率：0%"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>